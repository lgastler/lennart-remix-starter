{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "build": "remix build",
    "prepare": "husky install",
    "dev": "remix dev",
    "postinstall": "remix setup node",
    "start": "remix-serve build",
    "clean": "rimraf ./node_modules/.cache ./server/dist ./build ./public/build \"./app/styles/**/*.css\"",
    "css:watch": "npx tailwindcss -i ./styles/tailwind.css -o app/styles/tailwind.css --watch",
    "css:build": "npx tailwindcss -i ./styles/tailwind.css -o app/styles/tailwind.css",
    "deploy": "flyctl deploy --build-arg REMIX_TOKEN=${REMIX_TOKEN}",
    "validate": "./validate",
    "test": "jest --passWithNoTests",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "typecheck": "tsc -b",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --ext js,jsx,ts,tsx .",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|gql|graphql|mdx|vue)\""
  },
  "dependencies": {
    "@remix-run/react": "^1.0.4",
    "@remix-run/serve": "^1.0.4",
    "dotenv": "^10.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "6.0.0",
    "remix": "^1.0.4",
    "remix-utils": "^2.1.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.0.4",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/line-clamp": "^0.3.0",
    "@tailwindcss/typography": "^0.5.0",
    "@testing-library/cypress": "^8.0.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "autoprefixer": "^10.4.0",
    "concurrently": "^6.3.0",
    "cypress": "^8.7.0",
    "esbuild-jest": "^0.5.0",
    "eslint": "^7.32.0",
    "eslint-config-kentcdodds": "^19.2.0",
    "eslint-plugin-jest": "^25.2.2",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "jest-watch-typeahead": "^1.0.0",
    "kcd-scripts": "^11.2.2",
    "msw": "^0.35.0",
    "postcss": "^8.3.11",
    "postcss-cli": "^9.0.1",
    "prettier": "^2.4.1",
    "prettier-plugin-tailwind": "^2.2.12",
    "rimraf": "^3.0.2",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.0.0",
    "typescript": "^4.4.4"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "eslintIgnore": [
    "node_modules",
    "coverage",
    "build",
    "public/build",
    "*.ignored/",
    "*.ignored.*"
  ]
}
